<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_center"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/hand_icon" />

            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/right"
                android:text="米多热销"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_left1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px2dp_20"
            android:src="@drawable/hand_icon"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_left2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px2dp_20"
            android:src="@drawable/hand_icon"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>